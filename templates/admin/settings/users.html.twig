{% extends 'base.html.twig' %}
{% block title %}User Settings{% endblock %}
{% block body %}
    <h1>Manage Users</h1>
    <a href="{{ path("app_add_user") }}" class="btn btn-primary">Add User</a>
    <table class="table">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ roles[loop.index0]|join(", ") }}</td>
                    <td>To Follow</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
