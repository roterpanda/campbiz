{% extends 'base.html.twig' %}
{% block title %}{{'User Settings'|trans}}{% endblock %}
{% block body %}
    <h1>{{ 'Manage users'|trans }}</h1>
    <a href="{{ path("app_add_user") }}" class="btn btn-primary">{{ 'Add User'|trans }}</a>
    <table class="table">
        <thead>
            <tr>
                <th>{{ 'Username'|trans }}</th>
                <th>{{ 'Email'|trans }}</th>
                <th>{{ 'Roles'|trans }}</th>
                <th>{{ 'Actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ roles[loop.index0]|join(", ") }}</td>
                    <td></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
